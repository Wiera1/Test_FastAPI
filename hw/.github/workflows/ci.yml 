workflow:
  rules:
    - if: $CI_PIPELINE_SOURCE == 'merge_request_event'

image: python:3.7


stages:
  - build
  - test


before-script:
    - pip install -r requirements.txt

unittest:
  stage: test
  script:
    - pytest hw

mypy:
  stage: test
  script:
    - mypy hw/
  rules:
    - if: $CI_PIPELINE_SOURCE == 'merge_request_event'
    - if: $CI_COMMIT_BRANCH == "main"

black:
  stage: test
  script:
    - black --diff --check hw/
  rules:
    - if: $CI_PIPELINE_SOURCE == 'merge_request_event'
    - if: $CI_COMMIT_BRANCH == "main"

isort:
  stage: test
  script:
    - isort --check-only hw/
  rules:
    - if: $CI_PIPELINE_SOURCE == 'merge_request_event'
    - if: $CI_COMMIT_BRANCH == "main"

flake8:
  stage: test
  script:
    - flake8 hw/
  rules:
    - if: $CI_PIPELINE_SOURCE == 'merge_request_event'
    - if: $CI_COMMIT_BRANCH == "main"
