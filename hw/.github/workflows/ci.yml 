stages:
  - test

before_script:
  - pip install -r requirements.txt pytest mypy black>=24.0.0 isort flake8 flask flask-sqlalchemy

mypy:
  stage: test
  script:
    - mypy hw/
  rules:
    - if: $CI_PIPELINE_SOURCE == "merge_request_event"
    - if: $CI_COMMIT_BRANCH == "main"

black:
  stage: test
  script:
    - black --check --diff hw/
  rules:
    - if: $CI_PIPELINE_SOURCE == "merge_request_event"
    - if: $CI_COMMIT_BRANCH == "main"

isort:
  stage: test
  script:
    - isort --check-only hw/
  rules:
    - if: $CI_PIPELINE_SOURCE == "merge_request_event"
    - if: $CI_COMMIT_BRANCH == "main"

flake8:  # ← Исправлено flask8
  stage: test
  script:
    - flake8 hw/
  rules:
    - if: $CI_PIPELINE_SOURCE == "merge_request_event"
    - if: $CI_COMMIT_BRANCH == "main"

unittest:
  stage: test
  script:
    - pytest hw/
  rules:
    - if: $CI_PIPELINE_SOURCE == "merge_request_event"
    - if: $CI_COMMIT_BRANCH == "main"
