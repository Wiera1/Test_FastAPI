name: CI

on:
  push:
    branches: ["main"]
  pull_request:
    branches: [ "main" ]

jobs:
  ci:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.10"

      - name: Install dependencies
        run: |
          pip install "black>=22.3.0"
          pip install "click>=8.1.0,<9.0.0"
          pip install mypy flask flask-sqlalchemy

      - name: Run unit tests (pytest)
        run: |
          pytest

      - name: Run mypy
        run: |
          mypy hw

      - name: Run black (check only)
        run: |
          black --diff --diff .

      - name: Run isort (check only)
        run: |
          isort --check-only hw

      - name: Run flake8
        run: |
          flake8 hw
